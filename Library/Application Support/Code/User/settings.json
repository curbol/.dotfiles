  // Enhanced vscode-neovim settings for LazyVim compatibility
  "vscode-neovim.neovimViewportHeightExtend": 1000,
  "vscode-neovim.revealCursorScrollLine": true,
  // Improve performance and responsiveness  
  "vscode-neovim.logOutputToConsole": false,
  // =============================================================================
  // WHICHKEY EXTENSION
  // =============================================================================
  "whichkey.delay": 200,
  "whichkey.sortOrder": "custom",
  // =============================================================================
  // MCP (MODEL CONTEXT PROTOCOL) SERVERS
  // =============================================================================
  "mcp": {
    "servers": {
      "gladly-app-platform": {
        "command": "node",
        "args": [
          "/Users/curtis/code/app-platform-mcp/dist/main.js"
        ],
        "env": {
          "GLADLY_APP_CFG_HOST": "us-master.gladly.qa",
          "GLADLY_APP_CFG_USER": "curtis.bollinger@gladly.com",
          "GLADLY_APP_CFG_TOKEN": "${input:gladly_token}",
          "GLADLY_APP_CFG_ROOT": "/Users/curtis/Gladly"
        }
      },
      "github": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "GITHUB_PERSONAL_ACCESS_TOKEN",
          "ghcr.io/github/github-mcp-server"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
        },
      },
      "shortcut": {
        "command": "npx",
        "args": [
          "-y",
          "@shortcut/mcp@latest"
        ],
        "env": {
          "SHORTCUT_API_TOKEN": "${input:shortcut_token}"
        }
      },
      "time": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "mcp/time"
        ]
      }
    },
    "inputs": [
      {
        "id": "gladly_token",
        "type": "promptString",
        "description": "Gladly Personal Access Token",
        "password": true
      },
      {
        "id": "github_token",
        "type": "promptString",
        "description": "GitHub Personal Access Token",
        "password": true
      },
      {
        "id": "shortcut_token",
        "type": "promptString",
        "description": "Shortcut Personal Access Token",
        "password": true
      }
    ]
  },
  "docker.extension.enableComposeLanguageServer": false,
}