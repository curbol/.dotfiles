{
  // =============================================================================
  // EDITOR SETTINGS
  // =============================================================================
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono, Victor Mono SemiBold, Fira Code, Consolas, Menlo, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.cursorStyle": "line-thin",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "onHover",
  "editor.linkedEditing": true,
  "editor.trimAutoWhitespace": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.accessibilitySupport": "off",
  // Optimizations for vscode-neovim
  "editor.scrollBeyondLastLine": false,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.smoothScrolling": false,
  "editor.find.autoFindInSelection": "never",
  "editor.find.seedSearchStringFromSelection": "selection",
  // Better cursor and selection behavior with neovim
  "editor.cursorSurroundingLines": 10,
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  // Disable animations for better performance with vscode-neovim
  "workbench.reduceMotion": "on",
  "workbench.list.smoothScrolling": false,
  "workbench.tree.indent": 8,
  "workbench.hover.delay": 300,
  "editor.quickSuggestions": {
    "other": "off",
    "comments": "off",
    "strings": "off"
  },
  "editor.parameterHints.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.tabCompletion": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  // =============================================================================
  // TERMINAL CONFIGURATION
  // =============================================================================
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono, Victor Mono SemiBold, Fira Code, Consolas, Menlo, 'Courier New', monospace",
  "terminal.external.osxExec": "WezTerm.app",
  // =============================================================================
  // LANGUAGE-SPECIFIC FORMATTING
  // =============================================================================
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // =============================================================================
  // MARKDOWN CONFIGURATION
  // =============================================================================
  "markdown-preview-enhanced.previewColorScheme": "editorColorScheme",
  // =============================================================================
  // PRETTIER CONFIGURATION
  // =============================================================================
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.endOfLine": "lf",
  "prettier.semi": false,
  "Prettier-SQL.SQLFlavourOverride": "postgresql",
  // =============================================================================
  // ESLINT CONFIGURATION
  // =============================================================================
  "eslint.validate": [
    "vue",
    "html",
    "javascript"
  ],
  // =============================================================================
  // WORKBENCH & UI
  // =============================================================================
  "workbench.iconTheme": "gruvbox-icon-theme",
  "workbench.colorTheme": "Gruvbox ish Dark Soft",
  "workbench.editor.revealIfOpen": true,
  "workbench.preferredDarkColorTheme": "Gruvbox ish Dark Soft",
  "workbench.preferredHighContrastColorTheme": "Gruvbox ish Dark Hard",
  // =============================================================================
  // ZEN MODE CONFIGURATION
  // =============================================================================
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  "zenMode.showTabs": "single",
  "zenMode.silentNotifications": false,
  // =============================================================================
  // PEACOCK THEME CONFIGURATION
  // =============================================================================
  "peacock.surpriseMeFromFavoritesOnly": true,
  "peacock.surpriseMeOnStartup": true,
  "peacock.favoriteColors": [
    // Gruvbox ish Colors
    {
      "name": "Coral Red",
      "value": "#cf5353"
    },
    {
      "name": "Burnt Orange",
      "value": "#e57e43"
    },
    {
      "name": "Golden Amber",
      "value": "#d18b16"
    },
    {
      "name": "Olive Gold",
      "value": "#8d8b18"
    },
    {
      "name": "Sage Green",
      "value": "#7ba77c"
    },
    {
      "name": "Seafoam Teal",
      "value": "#789b8d"
    },
    {
      "name": "Dusty Rose",
      "value": "#cd7b90"
    },
  ],
  // =============================================================================
  // ICON THEME CONFIGURATION
  // =============================================================================
  "material-icon-theme.activeIconPack": "none",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.files.color": "#02B3B2",
  "material-icon-theme.folders.color": "#6FB3AC",
  // =============================================================================
  // DIFF EDITOR
  // =============================================================================
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.diffAlgorithm": "advanced",
  // =============================================================================
  // FILES & WORKSPACE
  // =============================================================================
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/vendor": true,
    "**/node_modules": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/vendor": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "files.associations": {
    "*.env.*": "dotenv",
    "*.tsx": "typescriptreact",
    "*.jsx": "javascriptreact"
  },
  "search.exclude": {
    "**/vendor": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  // =============================================================================
  // SPELL CHECKING
  // =============================================================================
  "cSpell.userWords": [
    "CICD",
    "bezier",
    "bollinger",
    "contentful",
    "cooldown",
    "falsey",
    "idempotency",
    "index",
    "lerp",
    "metafield",
    "migrate",
    "pathing",
    "precommit",
    "raycast",
    "respawn",
    "scriptable",
    "slerp",
    "src",
    "tween",
    "upsert"
  ],
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.enabledNotifications": {
    "Lines too Long": false,
    "Maximum Word Length Exceeded": false,
    "Average Word Length too Long": false
  },
  // =============================================================================
  // GIT CONFIGURATION
  // =============================================================================
  "git.enabled": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.autoStash": true,
  "git.fetchOnPull": true,
  "git.mergeEditor": true,
  "git.pruneOnFetch": true,
  "git.pullBeforeCheckout": true,
  "git.terminalGitEditor": true,
  "git.replaceTagsWhenPull": true,
  "git.branchProtection": [
    "main",
    "origin/main"
  ],
  // =============================================================================
  // GITHUB & GITLENS
  // =============================================================================
  "githubPullRequests.queries": [
    {
      "label": "Local Pull Request Branches",
      "query": "default"
    },
    {
      "label": "Waiting For My Review",
      "query": "repo:${owner}/${repository} is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "repo:${owner}/${repository} is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "repo:${owner}/${repository} is:open author:${user}"
    },
    {
      "label": "All Open",
      "query": "default"
    }
  ],
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "switch:command"
  ],
  // =============================================================================
  // GITHUB COPILOT
  // =============================================================================
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": false
  },
  // =============================================================================
  // ERROR LENS
  // =============================================================================
  "errorLens.messageBackgroundMode": "message",
  "errorLens.fontSize": "12",
  "errorLens.gutterIconSet": "circle",
  "errorLens.gutterIconSize": "50%",
  "errorLens.delay": 1000,
  // =============================================================================
  // TODO TREE
  // =============================================================================
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  // =============================================================================
  // LANGUAGE TOOLS & FRAMEWORKS
  // =============================================================================
  // TypeScript & JavaScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  // Other Languages
  "go.toolsManagement.autoUpdate": true,
  "omnisharp.useModernNet": false,
  "razor.devmode": true,
  "redhat.telemetry.enabled": true,
  // =============================================================================
  // CODE RUNNER
  // =============================================================================
  "code-runner.runInTerminal": true,
  "code-runner.clearPreviousOutput": true,
  // =============================================================================
  // YAML CONFIGURATION
  // =============================================================================
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  // =============================================================================
  // KUBERNETES CONFIGURATION
  // =============================================================================
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.mac": "/Users/curtis/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vscode-kubernetes.minikube-path.mac": "/Users/curtis/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
    "vs-kubernetes.kubeconfig": "/Users/curtis/.kube/config",
    "vs-kubernetes.knownKubeconfigs": [
      "/Users/curtis/.kube/config"
    ],
    "vscode-kubernetes.helm-path-mac": "/Users/curtis/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.kubectl-path-mac": "/Users/curtis/.vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path-mac": "/Users/curtis/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vscode-kubernetes.helm-path-windows": "C:\\Users\\curti\\.vs-kubernetes\\tools\\helm\\windows-amd64\\helm.exe",
    "vscode-kubernetes.kubectl-path-windows": "C:\\Users\\curti\\.vs-kubernetes\\tools\\kubectl\\kubectl.exe",
    "vscode-kubernetes.minikube-path-windows": "C:\\Users\\curti\\.vs-kubernetes\\tools\\minikube\\windows-amd64\\minikube.exe"
  },
  "vscode-kubernetes.kubectl-path": "/usr/local/Cellar/kubernetes-cli/1.27.0/bin/kubectl",
  // =============================================================================
  // NEOVIM INTEGRATION
  // =============================================================================
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.list.defaultFindMode": "highlight",
  "workbench.list.typeNavigationMode": "trigger",
  "workbench.tree.expandMode": "singleClick",
  "explorer.compactFolders": false,
  "explorer.incrementalNaming": "smart",
  "explorer.sortOrder": "type",
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "search.smartCase": true,
  "search.globalFindClipboard": false,
  "workbench.colorCustomizations": {
    "editor.wordHighlightBackground": "#92837400",
    "editor.wordHighlightBorder": "#92837460",
    "editor.wordHighlightStrongBackground": "#789b8d00",
    "editor.wordHighlightStrongBorder": "#7ba77c80",
    "list.hoverBackground": "#50494580",
    "list.hoverForeground": "#ebdbb2",
    "list.activeSelectionBackground": "#789b8d80",
    "list.activeSelectionForeground": "#ebdbb2",
    "list.inactiveSelectionBackground": "#789b8d40",
    "list.inactiveSelectionForeground": "#a89984",
    "list.focusBackground": "#e57e4380",
    "list.focusForeground": "#ebdbb2",
    "list.focusOutline": "#e57e4380",
    "list.focusAndActiveSelectionBackground": "#e57e4380",
    "list.focusAndActiveSelectionForeground": "#ebdbb2",
  },
  // Configure neovim highlight groups for better VSCode integration (using custom palette)
  "vscode-neovim.highlightGroups.highlights": {
    "FlashBackdrop": {
