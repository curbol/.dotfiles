{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "shortcut": {
      "command": "npx",
      "args": [
        "-y",
        "@shortcut/mcp-server"
      ],
      "env": {
        "SHORTCUT_API_TOKEN": "${SHORTCUT_API_TOKEN}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/curtis"
      ]
    },
    "gladly-app-platform": {
      "command": "npx",
      "args": [
        "@sagansystems/app-platform-mcp-server"
      ],
      "env": {
        "GLADLY_APP_CFG_HOST": "us-master.gladly.qa",
        "GLADLY_APP_CFG_USER": "curtis.bollinger@gladly.com",
        "GLADLY_APP_CFG_TOKEN": "${GLADLY_APP_CFG_TOKEN}",
        "GLADLY_APP_CFG_ROOT": "/Users/curtis/Gladly"
      }
    }
  }
}
